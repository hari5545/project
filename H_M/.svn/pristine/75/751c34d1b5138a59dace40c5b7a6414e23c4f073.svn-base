@charset "UTF-8";
.form-group {
	display: block;
}
.login-container{
    margin-top: 8%;
    margin-bottom: 5%;
}
.login-form-white{
    padding: 3%;
    background-color: #fff;
    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
}
.login-form-white h3{
    text-align: center;
    color: #333;
}
.login-form-colored{
    padding: 3%;
    background: #277FAD;
    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
}
.login-form-colored h3{
    text-align: center;
    color: #fff;
}
.login-container form{
    padding: 10%;
    color:#fff;
}
.btnSubmit
{
    width: 50%;
    /* border-radius: 1rem; */
    border-radius:1px;
    padding: 1.5%;
    border: none;
    cursor: pointer;
}
.login-form-white .btnSubmit{
    font-weight: 600;
    color: #fff;
    background-color: #277FAD;
}
.login-form-colored .btnSubmit{
    font-weight: 600;
    color: #0062cc;
    background-color: #fff;
}
.login-form-colored .ForgetPwd{
    color: #fff;
    font-weight: 600;
    text-decoration: none;
}
.login-form-white .ForgetPwd{
    color: #277FAD;
    font-weight: 600;
    text-decoration: none;
    display: block;
}

.login-logo {
    -moz-box-shadow: 0 0 5px #fff;
    -webkit-box-shadow: 0 0 5px #fff;
    box-shadow: 0px 0px 5px #fff;
    background-color: white;
    opacity: 0.5;
    margin-bottom: 2em;
}